<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Minutes.EntriesPage"
             Title="Meeting Minutes"
             NavigationPage.BackButtonTitle="Minutes"
             Padding="20">

	<ContentPage.Content>
        <StackLayout>

            <Entry x:Name="newEntry" Placeholder="Add a new Entry" Margin="0,0,0,20" Completed="OnAddEntry" />

            <ListView x:Name="entries" VerticalOptions="FillAndExpand">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <TextCell
						    Text="{Binding Title}"
						    Detail="{Binding Text}"
						    DetailColor="Goldenrod" />
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </StackLayout>


	</ContentPage.Content>
</ContentPage>	